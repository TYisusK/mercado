<!DOCTYPE html>
<html>
<head>
  <title>Nuevo Usuario</title>
  <link rel="stylesheet" type="text/css" href="/Web/css/registro.css">
</head>
<%-include("../templates/encabezado") %>

<body>
  
  <div class="container mt-5">
    <form action="/nuevousuario" method="post" enctype="multipart/form-data">
      <div class="card">
        <div class="card-header" id="card-header">
          <h1>Nuevo Usuario</h1>
        </div>
        <div class="card-body">
          <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
          <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario">
          <input class="form-control mb-3" type="password" name="password" id="password" placeholder="Password">
          <input class="form-control mb-3" type="text" name="edad" id="edad" placeholder="Edad">
          <input class="form-control mb-3" type="text" name="correo" id="correo" placeholder="Correo">
          <input class="form-control mb-3" type="text" name="telefono" id="telefono" placeholder="Número telefónico">
          <label for="tipo">Tipo de cuenta</label>
          <select id="tipo" name="tipo" class="form-control mb-3">
            <option value="vendedor">Vendedor</option>
            <option value="usuario normal">Usuario Normal</option>
          </select>
          <label for="foto">Selecciona tu foto</label>
          <input class="form-control mb-3" type="file" name="foto" id="foto">
        </div>
        <div class="card-footer" id="card-footer">
          <button class="btn btn-primary" type="submit">Guardar Usuario</button>
          <button class="btn btn-secondary" type="reset">Limpiar campos</button>
        </div>
      </div>
    </form>
  </div>
  <%-include("../templates/pie") %>
</body>
</html>
